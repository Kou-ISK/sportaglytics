{
  "name": "sportaglytics",
  "version": "0.3.2",
  "description": "Sports video tagging and analytics application",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/utils": "^7.3.7",
    "@mui/x-charts": "^8.25.0",
    "@types/video.js": "^7.3.58",
    "ffmpeg-static": "^5.2.0",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.21",
    "react": "^19.2.3",
    "react-datepicker": "^9.1.0",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "ulid": "^3.0.2",
    "uuid": "^13.0.0",
    "video.js": "^8.23.4"
  },
  "main": "build/electron/src/main.js",
  "homepage": "./",
  "author": "Kou-ISK",
  "scripts": {
    "lint": "eslint src --fix",
    "fix": "pnpm run lint && pnpm run format",
    "format": "prettier --write '**/*.ts' '**/*.tsx'",
    "start": "vite",
    "build": "vite build",
    "test": "vitest",
    "preview": "vite preview",
    "electron:start": "pnpm run build && pnpm exec tsc -p electron && env -u ELECTRON_RUN_AS_NODE electron .",
    "electron:build": "pnpm run build && pnpm exec tsc -p electron && electron-builder",
    "electron:package:mac": "pnpm run build && pnpm exec tsc -p electron && electron-builder --mac --x64 --arm64",
    "electron:dev": "concurrently \"pnpm start\" \"wait-on http://localhost:3000 && pnpm run electron:start\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.28.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.4.0",
    "minimatch": "^10.1.1",
    "prettier": "^3.8.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "repository": "https://github.com/Kou-ISK/sportaglytics.git",
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "min-document": "2.19.2"
    }
  }
}
